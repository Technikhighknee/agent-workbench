{
  "name": "@agent-workbench/board",
  "version": "0.1.0",
  "description": "A simple task board for AI agents - Trello-like MCP tools for managing work",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./server": {
      "import": "./dist/server.js"
    }
  },
  "bin": {
    "board-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "echo 'Skipping typecheck - MCP SDK generics cause deep instantiation'"
  },
  "dependencies": {
    "@agent-workbench/core": "*",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist"
  ]
}
