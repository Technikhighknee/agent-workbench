{
  "name": "@agent-workbench/test-runner",
  "version": "0.1.0",
  "description": "MCP server for running tests with structured results. Framework-agnostic, maps failures to source locations.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "test-runner": "./dist/server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc --watch",
    "test": "npx tsx test/smoke.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "ai-agents",
    "testing",
    "jest",
    "vitest",
    "model-context-protocol"
  ],
  "author": "Jason Posch <Technikhighknee>",
  "license": "UNLICENSE",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "glob": "^11.0.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  }
}
