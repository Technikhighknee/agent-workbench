{
  "name": "@agent-workbench/task-runner",
  "version": "0.1.0",
  "description": "Minimal, robust task execution for AI agents with SQLite persistence",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "task-runner": "./dist/server.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@agent-workbench/core": "^0.1.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "better-sqlite3": "^11.7.0",
    "nanoid": "^5.1.5",
    "strip-ansi": "^7.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.21",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.0"
  }
}
