{
  "mcpServers": {
    "process-host": {
      "command": "npx",
      "args": ["-y", "tsx", "packages/process-host/src/server.ts"],
      "agentPreferences": {
        "description": "No timeouts. Clean output. Run builds/tests with run_process, start servers with spawn_process.",
        "toolGroups": {
          "run": { "tools": ["run_process"] },
          "background": { "tools": ["spawn_process", "get_logs", "stop_process", "wait_for_pattern"] }
        },
        "tips": [
          "run_process waits indefinitely, output is cleaned",
          "spawn_process + wait_for_pattern for dev servers"
        ]
      }
    },
    "history": {
      "command": "npx",
      "args": ["-y", "tsx", "packages/history/src/server.ts"],
      "agentPreferences": {
        "description": "Git blame, history, commits. Understand WHY code exists.",
        "toolGroups": {
          "blame": { "tools": ["blame_file"] },
          "history": { "tools": ["file_history", "recent_changes", "diff_file"] },
          "search": { "tools": ["search_commits", "commit_info"] }
        },
        "tips": [
          "blame_file shows intent behind each line",
          "recent_changes for 'what broke?'"
        ]
      }
    },
    "project": {
      "command": "npx",
      "args": ["-y", "tsx", "packages/project/src/server.ts"],
      "agentPreferences": {
        "description": "Instant project orientation. Type, scripts, dependencies, configs. Auto-detects root.",
        "toolGroups": {
          "info": { "tools": ["get_project_info", "get_scripts", "get_dependencies"] },
          "config": { "tools": ["find_configs", "read_config"] }
        },
        "tips": [
          "get_project_info first in any new codebase",
          "Works from subdirectories"
        ]
      }
    },
    "syntax": {
      "command": "npx",
      "args": ["-y", "tsx", "packages/syntax/src/server.ts"],
      "agentPreferences": {
        "description": "Edit by function name, not line numbers. Auto-indexed. TS/JS/Python/Go/Rust.",
        "toolGroups": {
          "file": { "tools": ["list_symbols", "read_symbol", "edit_symbol", "edit_lines"] },
          "modules": { "tools": ["get_imports", "get_exports", "analyze_deps"] },
          "refactor": { "tools": ["search_symbols", "find_references", "rename_symbol"] },
          "calls": { "tools": ["get_callers", "get_callees"] }
        },
        "tips": [
          "edit_symbol is more reliable than string matching",
          "rename_symbol dry_run=true to preview",
          "get_callers/get_callees before refactoring"
        ]
      }
    }
  }
}
